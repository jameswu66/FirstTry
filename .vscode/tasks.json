{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe 生成活动文件",
			"command": "E:/mingw64/bin/gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				//"${file}",
				"${fileDirname}\\*.c",//多文件编译
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				//"-fexec-charset=GB18030"//外置终端中文不乱码
			],
			"options": {
				"cwd": "E:/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: E:/mingw64/bin/gcc.exe"
		}
	]
}